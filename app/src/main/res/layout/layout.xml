<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="30dp" >

    <TextView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:text=""
        android:textColor="#fff"
        android:layout_margin="4dp"
        android:textSize="15sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="18sp"
        android:layout_margin="6dp">
    </EditText>

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="18sp"
        android:layout_margin="6dp">
    </EditText>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnCE"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#DCDCDC"
            android:text="CE"

            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnC"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="#DCDCDC"
            android:textSize="20sp"
            android:text="C"/>
        <Button
            android:id="@+id/btnBS"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="#DCDCDC"
            android:textSize="20sp"
            android:text="BS" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="#DCDCDC"
            android:textSize="20sp"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="9"/>

        <Button
            android:id="@+id/btnMul"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:background="#DCDCDC"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn4"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="6" />

        <Button
            android:id="@+id/btnSub"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:background="#DCDCDC"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn1"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="@string/btn1"/>

        <Button
            android:id="@+id/btn2"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="3"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:background="#DCDCDC"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:background="#DCDCDC"
            android:text="+/-"/>

        <Button
            android:id="@+id/btn0"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:textSize="20sp"
            android:text="0"/>
        <Button
            android:id="@+id/btnDot"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:background="#DCDCDC"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            android:layout_margin="4dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:background="#DCDCDC"
            android:text="="/>

    </LinearLayout>
</LinearLayout>
